<% @title="Home" %>
<table class="table table-striped ">
  <thead>
    <tr>
      <th class="text-center">Symbol</th>
      <th class="text-center">Type</th>
      <th class="text-center">Number</th>
      <th class="text-center">Price or Strike Price</th>
      <th class="text-center">Value</th>
    </tr>
  </thead>
  <tbody>
  <% @current_portfolio.each do |current_asset|%>
    <tr>
      <td><%= current_asset.symbol %></td>
      <td><%= current_asset.asset_type %></td>
      <td><%= current_asset.number %></td>
      <td><%= current_asset.price %></td>
      <td><%= current_asset.value %></td>
    </tr>
  <% end %>
  <% @current_options.each do |current_asset|%>
      <tr>
        <td><%= current_asset.symbol %></td>
        <td><%= current_asset.asset_type %></td>
        <td><%= current_asset.number %></td>
        <td><%= current_asset.strike_price %></td>
        <td><%= current_asset.value %></td>
      </tr>
  <% end %>
    <tr>
      <td>Cash</td>
      <td></td>
      <td></td>
      <td></td>
      <td><%= @cash %></td>
    </tr>
  <tr>
    <td>Net Worth</td>
    <td></td>
    <td></td>
    <td></td>
    <td><%= @net_worth %></td>
  </tr>
  </tbody>
</table>
